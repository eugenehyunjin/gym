<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="mapper.board">
	<resultMap type="boardVO" id="boardResult">
		<result property="title" column="title" />
		<result property="contents" column="contents" />
		<result property="brd_no" column="brd_no" />
		<result property="joindate" column="joindate" />
	</resultMap>

	<select id="selectAllBoard" resultMap="boardResult">
		 <![CDATA[
		select * from gym_board order by brd_no asc
			]]>
	</select>

	<insert id="addBoard" parameterType="java.util.Map">
 
  		<![CDATA[
  		 INSERT INTO gym_board(brd_no,title,contents) VALUES(brd_no.nextval,#{title},#{contents})
  		  ]]>

	</insert>



</mapper>