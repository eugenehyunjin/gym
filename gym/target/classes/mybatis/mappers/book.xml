<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="mapper.book">
	<resultMap type="bookVO" id="bookResult">
		<result property="member_id" column="member_id" />
		<result property="book_year" column="book_year" />
		<result property="book_month" column="book_month" />
		<result property="book_date" column="book_date" />
		<result property="book_time" column="book_time" />
		<result property="course_id" column="course_id" />
		<result property="master_id" column="master_id" />
		<result property="now_date" column="now_date" />
	</resultMap>
	
	<select id="selectBook" resultMap="bookResult">
		 <![CDATA[
			select * from gym_book where member_id=#{member_id} order by book_year, book_month, book_date, book_time desc
		]]>
	</select>
	
	<insert id="insertBook" parameterType="bookVO">
  	<![CDATA[
  		insert into gym_book values(#{member_id},#{book_year},#{book_month},#{book_date},#{book_time},#{course_id},#{master_id},sysdate)
  	]]>
  	</insert>
  	
  	<delete id="deleteMember" parameterType="String">
  	<![CDATA[
  		delete from gym_member where id=#{id}
  	]]>
  	</delete>
</mapper>